<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin id="vistaFamilyHistory" name="Family History"
			url="~./org/carewebframework/vista/ui/familyhistory/member.zul">
			<cwp:serialization>
			</cwp:serialization>
			<cwp:resource>
				<cwp:help-resource module="vistaFamilyHistoryHelp" />
				<cwp:css-resource url="~./org/carewebframework/vista/ui/familyhistory/familyhistory.css?1.2" />
			</cwp:resource>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<bean id="vistaFamilyHistoryService" lazy-init="true"
			class="org.carewebframework.vista.ui.familyhistory.service.FamilyHistoryService">
			<constructor-arg ref="brokerSession" />
		</bean>

		<bean name="vistaFamilyHistoryMemberController" scope="prototype"
			class="org.carewebframework.vista.ui.familyhistory.controller.MemberController">
			<constructor-arg ref="vistaFamilyHistoryService" />
			<property name="rowRenderer">
				<bean class="org.carewebframework.vista.ui.familyhistory.view.MemberRenderer" />
			</property>
		</bean>

		<bean name="vistaFamilyHistoryConditionController" scope="prototype"
			class="org.carewebframework.vista.ui.familyhistory.controller.ConditionController">
			<property name="rowRenderer">
				<bean class="org.carewebframework.vista.ui.familyhistory.view.ConditionRenderer" />
			</property>
		</bean>
		
		<bean name="vistaFamilyHistoryAddEditMemberController" scope="prototype" 
			class="org.carewebframework.vista.ui.familyhistory.controller.AddEditMemberController" />

		<bean name="vistaFamilyHistoryAddEditConditionController" scope="prototype" 
			class="org.carewebframework.vista.ui.familyhistory.controller.AddEditConditionController" />

	</beans>
</beans>