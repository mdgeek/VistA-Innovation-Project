<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin url="~./org/carewebframework/vista/ui/patientgoals/goals.zul" id="vistaPatientGoals"
			name="Patient Goals">
			<cwp:serialization>
			</cwp:serialization>
			<cwp:resource>
				<cwp:help-resource module="vistaPatientGoalsHelp" />
			</cwp:resource>
		</cwp:plugin>
	
	</beans>

	<beans profile="desktop">

		<bean id="vistaPatientGoalsGoalService" scope="prototype"
			class="org.carewebframework.vista.ui.patientgoals.service.GoalService">
			<constructor-arg ref="brokerSession" />
		</bean>

		<bean id="vistaPatientGoalsGoalController" scope="prototype"
			class="org.carewebframework.vista.ui.patientgoals.controller.GoalController">
			<constructor-arg ref="vistaPatientGoalsGoalService" />
			<property name="rowRenderer">
				<bean class="org.carewebframework.vista.ui.patientgoals.view.GoalRenderer" />
			</property>
		</bean>

		<bean id="vistaPatientGoalsStepController" scope="prototype"
			class="org.carewebframework.vista.ui.patientgoals.controller.StepController">
			<property name="rowRenderer">
				<bean class="org.carewebframework.vista.ui.patientgoals.view.StepRenderer" />
			</property>
		</bean>
		
		<bean id="vistaPatientGoalsAddEditController" scope="prototype"
			class="org.carewebframework.vista.ui.patientgoals.controller.AddEditController">
			<constructor-arg ref="vistaPatientGoalsGoalService" />
		</bean>

	</beans>

</beans>