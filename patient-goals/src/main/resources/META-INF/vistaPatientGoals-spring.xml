<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin url="~./org/carewebframework/vista/ui/patientgoals/main.zul" id="vistaPatientGoals"
			name="Patient Goals">
			<cwp:serialization>
			</cwp:serialization>
			<cwp:resource>
				<cwp:help-resource module="vistaPatientGoalsHelp" />
			</cwp:resource>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<bean name="vistaPatientGoalsController"
			class="org.carewebframework.vista.ui.patientgoals.MainController" scope="prototype" />

	</beans>

</beans>